<div id="settings-page">
    <div id="settings-page" class="settings-left-column settings-left-column_pos">
        <div class="left-column_margin-first">
            <img src={{PHfimg}} class="icon_left-column-margin">
            <a href="" class="settings-left-column__text">Изменить профиль</a>
        </div>
        <div class="left-column_margin-second">
            <img src={{PHsimg}} class="icon_left-column-margin">
            <a href="" class="settings-left-column__text">Настройки аккаунта</a>
        </div>
        <div class="left-column_margin-second">
            <img src={{PHtimg}} class="icon_left-column-margin">
            <a href="" class="settings-left-column__text">Настроить тему</a>
        </div>
    </div>
    <div class="settings-right-column settings-right-column_pos">
        <div class="right-column__title right-column__title-pos">Изменить профиль</div>
        <form id="UserSettings">
            <a href="#" data-section="profile" class="button-exit button-exit_pos"><span class="button-exit__text">Отмена</span></a>
            <div class="settings-right-column__avatar-block settings-right-column__avatar-block_pos">
                <img id="avatarPhotoSettings" class="settings-avatar-photo settings-avatar-photo_margin">
                <div class="settings-avatar-photo__title">{{username}}</div>
                <input type="button" id="avatarphotop" value="Изменить" onclick="document.getElementById('avatarphoto').click();" class="settings-avatar-photo__button settings-avatar-photo__button_margin">
                <input type="file" name="avatarphoto" id="avatarphoto" accept="image/*" class="button-without-styles">
            </div>
            <div class="settings-form-text name-block_pos">Имя</div>
            <input type="text" id="name" placeholder="Введите своё имя" {{#if name}}value={{name}}{{/if}} class="settings-form__input-block settings-form__input-block_name_pos">
            <div class="settings-form-text surname-block_pos">Фамилия</div>
            <input type="text" id="surname" placeholder="Введите свою фамилию" {{#if surname}}value={{surname}}{{/if}} class="settings-form__input-block settings-form__input-block_surname_pos">
            <div class="settings-form-text username-block_pos">Имя пользователя</div>
            <div class="settings-form-text href_pos">wwww.sunrise.com/</div>
            <input type="text" id="username" placeholder="username" {{#if username}}value={{username}}{{/if}} class="settings-form__input-block settings-form__input-block_href_pos">
            <div class="settings-form-text username-block_pos">Статус</div>
            <input type="text" id="status" placeholder="Расскажите о себе" {{#if status}}value={{status}}{{/if}} class="settings-form__input-block settings-form__input-block_status_pos">
            <input type="submit" class="button-save button-save_pos" value="Готово">
        </form>
    </div>
</div>